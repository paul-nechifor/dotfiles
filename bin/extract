#!/bin/bash -e

main() {
    if [[ ! -f $1 ]]; then
        echo "'$1' is not a valid file."
        exit 1
    fi
    case "$1" in
        *.7z) 7z x "$1" ;;
        *.Z) uncompress "$1" ;;
        *.bz2) bunzip2 "$1" ;;
        *.gz) gunzip "$1" ;;
        *.lzma) unlzma ./"$1" ;;
        *.rar) unrar x "$1" ;;
        *.tar) tar xvf "$1" ;;
        *.tar.bz2) tar xvjf "$1" ;;
        *.tar.gz) tar xvzf "$1" ;;
        *.tar.xz) tar xvJf ./"$1" ;;
        *.tbz2) tar xvjf "$1" ;;
        *.tgz) tar xvzf "$1" ;;
        *.zip) unzip "$1" ;;
        *.xz) unxz ./"$1" ;;
        *) echo "Unknown extraction command for '$1'." ;;
    esac
}

main "$@"
