[color "diff"]
  plain = normal
  meta = bold
  frag = cyan
  old = red
  new = green
  commit = yellow
  whitespace = normal red
[color "status"]
  header = normal
  added = red
  updated = green
  changed = red
  untracked = red
  nobranch = red
[alias]
  co = checkout
  c = commit
  s = "!echo -n 'branch: '; git rev-parse --abbrev-ref HEAD; git status --short"
