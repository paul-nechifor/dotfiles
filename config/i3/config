# Modifier keys.
set $mod Mod1
set $mod2 Mod4

# Startup programs.
exec --no-startup-id gnome-settings-daemon
exec --no-startup-id xsetroot -solid "#333333"

# Run on startup and reload.
exec_always synclient TapButton3=2
exec_always synclient TapButton2=3
exec_always xmodmap ~/.Xmodmap

# Font for window titles (ISO 10646 = Unicode).
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position.
floating_modifier $mod

# Toggle tiling/floating.
bindsym $mod+Shift+space floating toggle

# Change focus between tiling/floating windows.
bindsym $mod+space focus mode_toggle

# Hide borders next to the screen edge.
hide_edge_borders both

# Border size.
new_window 1pixel

# Kill focused window.
bindsym $mod+q kill

# Move focus.
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Focus the parent container.
bindsym $mod+a focus parent

# Focus the child container.
#bindcode $mod+d focus child

# Enter fullscreen mode for the focused container.
bindsym $mod+f fullscreen

# Move focused window.
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# Split in horizontal orientation.
bindsym $mod+g split h

# Split in vertical orientation.
bindsym $mod+v split v

# Switch to workspace.
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod2+h workspace prev
bindsym $mod2+l workspace next

# Toogle workspace.
bindsym $mod2+m workspace back_and_forth

# Move focused container to workspace.
bindsym $mod+Shift+exclam move container to workspace 1
bindsym $mod+Shift+at move container to workspace 2
bindsym $mod+Shift+numbersign move container to workspace 3
bindsym $mod+Shift+dollar move container to workspace 4
bindsym $mod+Shift+percent move container to workspace 5
bindsym $mod+Shift+asciicircum move container to workspace 6
bindsym $mod+Shift+ampersand move container to workspace 7
bindsym $mod+Shift+asterisk move container to workspace 8
bindsym $mod+Shift+parenleft move container to workspace 9
bindsym $mod+Shift+parenright move container to workspace 10

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart

# Exit i3 (logs you out of your X session).
#bindsym $mod+Shift+E exit

# Resize. Setup: SHRINK-W SHRINK-H GROW-H GROW-W
bindsym $mod+$mod2+h resize shrink width  10 px or 4 ppt
bindsym $mod+$mod2+j resize shrink height 10 px or 4 ppt
bindsym $mod+$mod2+k resize grow   height 10 px or 4 ppt
bindsym $mod+$mod2+l resize grow   width  10 px or 4 ppt

# Start i3bar.
bar {
  position bottom
  status_command i3status
  mode hide
  modifier $mod
}

# Workspaces monitors.
workspace 1 output LVDS1
workspace 2 output LVDS1
workspace 3 output LVDS1
workspace 4 output LVDS1
workspace 5 output LVDS1
workspace 6 output LVDS1
workspace 7 output LVDS1
workspace 8 output LVDS1
workspace 9 output VGA1
workspace 10 output VGA1

# Programs
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+b exec thunar
bindsym $mod+c exec google-chrome
bindsym $mod+d exec dmenu_run
bindsym $mod+w exec webstorm
bindsym $mod2+Return exec cool-retro-term
bindsym $mod+$mod2+c exec gnome-control-center
bindsym $mod+$mod2+f exec firefox
bindsym $mod+$mod2+i exec /opt/idea/bin/idea.sh
bindsym $mod+$mod2+m exec killall -9 chrome
bindsym $mod+$mod2+n exec /bin/sh "/usr/local/netbeans-7.2.1/bin/netbeans"
bindsym $mod+$mod2+t exec transmission-gtk
bindsym $mod+$mod2+v exec VirtualBox
