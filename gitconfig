[user]
    name = Paul Nechifor
    email = paul@nechifor.net
[core]
    excludesfile = ~/.gitignore
[color]
    ui = auto
[color "diff"]
    plain = normal
    meta = bold
    frag = cyan
    old = red
    new = green
    commit = yellow
    whitespace = normal red
[color "status"]
    header = normal
    added = red
    updated = green
    changed = red
    untracked = red
    nobranch = red
[alias]
    co = checkout
    c = commit
    s = "!echo -n 'branch: '; git rev-parse --abbrev-ref HEAD; git status --short"
    l = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

